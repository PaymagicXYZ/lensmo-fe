---
import Layout from "../layouts/Layout.astro";
import Search from "../components/Search/Search.astro";
import { Icon } from "astro-icon";
---

<Layout title="Welcome to Lensmo.">
  <div class="card bg-base-100 shadow-xl h-full mx-auto w-full">
    <div class="card-body flex flex-col content-center overflow-y-scroll">
      <div class="mb-4 flex flex-col content-center">
        <h1 class="leading-none mx-auto mt-2">
          <span class="text-gradient">Lensmo</span>
        </h1>
        <h3 class="mx-auto mt-2 text-slate-500">
          Send NFTs or tokens to <span class="italic">anyone</span>, no wallet
          required
        </h3>
      </div>
      <Search />
      <div class="flex mt-4 space-x-4 mx-auto">
        <button
          class="btn btn-primary"
          id="send"
          onclick="window.location.href = `/user/${getElementById('userId').value}`"
        >
          <Icon class="w-6" name="carbon:send-alt-filled" />Send</button
        >
        <button
          class="btn btn-primary"
          onclick="window.location.href = `/airdrop`"
          ><Icon class="w-6" name="icon-park-outline:hot-air-balloon" />Airdrop
        </button>
      </div>
    </div>
  </div>
</Layout>
<style>
  :root {
    --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
    --lensmo-gradient: linear-gradient(0deg, #01dfa8, #b9db48);
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--lensmo-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }
    50% {
      background-position-y: 80%;
    }
  }
</style>

<script is:inline>
  const input = document.getElementById("userId");
  const send = document.getElementById("send");
  input.addEventListener("keypress", function (event) {
    if (event.key === "Enter") {
      event.preventDefault();
      send.click();
    }
  });
</script>
