---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import Alert from "./Alert.astro";
import Footer from "./Footer.astro";
---

<!DOCTYPE html>
<html lang="en" data-theme="lensmo">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="lensmo" content="Lensmo" />
    <title>{title}</title>
  </head>
  <body>
    <Alert />
    <main>
      <div
        class="card bg-base-100 shadow-xl p-6 mx-auto w-full flex flex-col content-center"
      >
        <slot />
        <Footer />
      </div>
    </main>
    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-bg: hsl(10, 21%, 95%);
        --color-border: hsl(17, 24%, 90%);
      }

      html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
      }

      body {
        height: 100%;
        margin: 0;
        background-color: #21c098;
        background-image: url("../background-cover.png");
        background-size: cover;
        background-size: contain;
        min-height: 100vh;
      }
    </style>

    <style is:global>
      h1 {
        font-size: var(--font-size-xl);
      }

      h2 {
        font-size: var(--font-size-lg);
      }
      main {
        margin: auto;
        padding: 1em;
        max-width: 60ch;
        min-height: 850px;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      .animate-spin {
        --value: 40;
        --size: 3rem;
      }
    </style>
  </body>
</html>
