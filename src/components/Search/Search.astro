<div class="form-control w-full">
  <div class="input-group">
    <button class="btn btn-square disabled:opacity=0" disabled>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </button>
    <input
      type="text"
      id="userId"
      placeholder="Search..."
      class="w-full focus:outline-none input input-bordered"
    />
    <button
      class="btn btn-primary"
      id="send"
      onclick="window.location.href = `/user/${getElementById('userId').value}`"
    >
      Search
    </button>
  </div>
  <p class="text-slate-400 text-xs indent-3">
    Search for <a
      class="link-secondary underline decoration-1"
      href="/user/twitter:elonmusk">twitter:elonmusk</a
    > |
    <a
      class="link-secondary underline decoration-1"
      href="/user/twitter:joerogan">twitter:joerogan</a
    > |
    <a class="link-secondary underline decoration-1" href="/user/ens:vitalik"
      >ens:vitalik</a
    >
  </p>
</div>
